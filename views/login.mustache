<!DOCTYPE html>
<html>
<head>
    {{> header}}
    <title>Login</title>
</head>
<body>
  <div class="page-container d-flex flex-column min-vh-100">
    {{> navbar}}

    <div class="content-wrap flex-grow-1">
      <div class="container py-4" style="max-width: 500px;">
        <h2 class="mb-4 text-center">Login</h2>

        {{#message}}
        <div class="alert alert-warning text-center" role="alert">
          <a href="/login" class="alert-link">Login</a> to view/post your articles!
        </div>
        {{/message}}

        <form action="/login" method="POST" class="shadow-sm p-4 border rounded bg-light">
          <div class="mb-3">
            <label class="form-label">User Name</label>
            <input type="text" name="username" class="form-control" placeholder="Enter user name">
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" name="password" class="form-control" placeholder="Password">
          </div>
          <button type="submit" class="btn btn-primary w-100">Submit</button>

          {{#message1}}
          <div class="alert alert-danger mt-3" role="alert">
            {{message1}}
          </div>
          {{/message1}}

          {{#message2}}
          <div class="alert alert-danger mt-3" role="alert">
            {{message2}}<br>
            <a href="/register" class="alert-link">Register</a>
          </div>
          {{/message2}}
        </form>
      </div>
    </div>

    {{> footer}}
  </div>
</body>
</html>