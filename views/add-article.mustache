<!DOCTYPE html>
<html>
<head>
    {{> header}}
    <title>Add Article</title>
</head>
<body>
  <div class="page-container d-flex flex-column min-vh-100">
    
    <div class="w-100">
      {{> navbar}}
    </div>

    <div class="content-wrap flex-grow-1">
      <div class="container py-4" style="max-width: 600px;">
        <h2 class="text-center mb-4">Add an Article</h2>

        <form action="/{{username}}/add-article" method="POST" onsubmit="return prepareEditorData()" class="p-4 shadow-sm border rounded bg-light">
          <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" name="title" class="form-control" placeholder="Title" required>
          </div>
          <div class="mb-3">
            <label class="form-label">Description</label>
            <div id="editor" style="height: 200px;"></div>
            <input type="hidden" name="description" id="description">
          </div>
          <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
      </div>
    </div>

    {{> footer}}

    <script>
      const quill = new Quill('#editor', {
        theme: 'snow'
      });

      function prepareEditorData() {
        const html = quill.root.innerHTML.trim();
        document.getElementById('description').value = html;
        return true;
      }
    </script>
  </div>
</body>
</html>