<!DOCTYPE html>
<html>
<head>
    {{> header}}
    <title>{{username}}'s Articles</title>
</head>
<body>
  <div class="page-container d-flex flex-column min-vh-100">
    
    <!-- Full-width navbar -->
    <div class="w-100">
      {{> navbar}}
    </div>

    <div class="content-wrap flex-grow-1">
      <div class="container py-4">
        <h2 class="mb-4 text-center">{{username}}'s Articles</h2>

        {{#message}}
        <div class="alert alert-success text-center" role="alert">
          {{message}}
        </div>
        {{/message}}

        {{#articles}}
        <div class="card mb-3 shadow-sm">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <div class="mb-1 rich-article">{{{body}}}</div>

            <div class="d-flex">
              <a href="/{{username}}/articles/edit/{{articleid}}" class="me-2">
                <button type="button" class="btn btn-warning">Edit</button>
              </a>

              <form action="/{{username}}/delete-article" method="POST" class="m-0">
                <input type="hidden" name="articleid" value="{{articleid}}"/>
                <button type="submit" class="btn btn-danger">Delete</button>
              </form>
            </div>
          </div>
        </div>
        {{/articles}}

        {{^articles}}
        <div class="alert alert-info text-center" role="alert">
          You haven't posted any articles yet.
        </div>
        {{/articles}}

      </div>
    </div>

    {{> footer}}
  </div>
</body>
</html>